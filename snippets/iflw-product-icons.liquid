<div class="iflw-atc-icon">
  {% assign iflwtype = product.type %}
  {% case iflwtype %}
    {% when 'Full Metal CasiOak Watches',
      'Resin Bluetooth CasiOak Watches',
      'Resin CasiOak Watches',
      'Steel CasiOak Watches',
      'Tissot Watches',
      'Oris Watches',
      'Citizen Watches'
    %}
      <div class="iflw-atc-icon-hand-painted">
        {% render 'ecom-ifl-icons-hand-painted-block' %}
      </div>
    {% when 'Watch Straps' %}
      <div class="iflw-atc-icon-strap">
        {% render 'ecom-ifl-icons-straps-block' %}
      </div>
    {% when 'Original Tissot Watches' %}
      <div class="iflw-atc-icon-swiss">
        {% render 'ecom-ifl-icons-swiss-made-block' %}
      </div>
    {% when 'Original Citizen Watches' %}
      <div class="iflw-atc-icon-swiss">
        {% render 'ecom-ifl-icons-original-watches-block' %}
      </div>
    {% else %}
      <div class="iflw-atc-icon-handmade">
        {% render 'ecom-ifl-icons-handmade-block' %}
      </div>
  {% endcase %}
</div>
