{% if product.metafields.custom.attributes != blank %}
  {% assign attributes = product.metafields.custom.attributes %}
  <table style="border: none;">

  <script>

    function renderAttr(obj) {
      let myvalue = "";
      for (const [key, value] of Object.entries(obj)) {

        let capitalized = `${key}`.charAt(0).toUpperCase() + `${key}`.slice(1);

        myvalue += '<tr><td style="text-align: right; border: none; vertical-align: top;"><strong>' + capitalized.replaceAll('_', ' ') + ': </strong></td><td style="border: none; vertical-align: top;">' + `${value}` + '</td></tr>';
      }
      return myvalue;
    }

    document.write(renderAttr({{ attributes }}));
  </script>
  </table>
{% endif %}