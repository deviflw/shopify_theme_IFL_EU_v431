{% assign iflwprodtype = product.type %}
{% case iflwprodtype %}
  {% when 'Original Citizen Watches', 'Original Tissot Watches', 'Swiss KubiK Accessories', 'Watch Straps', 'Original Seiko Watches' %}
    {% render 'ecom-ifl-product-top-solo-soldier-block' %}
  {% when 'Concept' %}
    {% render 'ecom-ifl-product-top-vanilla-noatc-block' %}

  {% else %}
    {% render 'ecom-ifl-product-top-vanilla-block' %}
{% endcase %}
